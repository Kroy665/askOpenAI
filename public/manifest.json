{
  "manifest_version": 3,
  "short_name": "Ask Me Anything",
  "version": "0.0.1",
  "name": "Ask Me Anything",
  "action": {
    "default_popup": "index.html",
    "default_title": "Ask Me Anything"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "audioCapture",
    "activeTab",
    "storage",
    "https://*/",
    "speech",
    "notifications",
    "identity",
    "voice",
    "contextMenus",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "cookies"
  ],
  "host_permissions": [
    "https://*/"
  ]
}
